@page
@model IT15_Project.Views.User.Admin.DriversModel
@{
    // Temporary: hardcoded driver list
    var RegisteredDrivers = new List<dynamic> {
        new { FullName = "Juan Dela Cruz", Email = "juan@example.com", PhoneNumber = "09171234567", VehicleModel = "Toyota Vios 2022", VehicleType = "Sedan", PlateNumber = "ABC-1234" },
        new { FullName = "Maria Santos", Email = "maria@example.com", PhoneNumber = "09181234567", VehicleModel = "Honda Civic 2021", VehicleType = "Sedan", PlateNumber = "XYZ-5678" }
    };

    var PendingDrivers = new List<dynamic> {
        new { FullName = "Pedro Penduko", Email = "pedro@example.com", PhoneNumber = "09221234567", VehicleModel = "Suzuki Raider", VehicleType = "Motorcycle", PlateNumber = "MOT-1122" },
        new { FullName = "Liza Soberano", Email = "liza@example.com", PhoneNumber = "09331234567", VehicleModel = "Ford Everest", VehicleType = "SUV", PlateNumber = "SUV-7788" }
    };
}

<div class="container mt-5">
    <h1 class="mb-4">Registered Drivers</h1>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Full Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Vehicle</th>
                <th>Plate Number</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @if (RegisteredDrivers.Any())
            {
                int count = 1;
                foreach (var driver in RegisteredDrivers)
                {
                    <tr>
                        <td>@count</td>
                        <td>@driver.FullName</td>
                        <td>@driver.Email</td>
                        <td>@driver.PhoneNumber</td>
                        <td>@driver.VehicleModel (@driver.VehicleType)</td>
                        <td>@driver.PlateNumber</td>
                        <td><span class="badge bg-success">Approved</span></td>
                    </tr>
                    count++;
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center">No registered drivers found.</td>
                </tr>
            }
        </tbody>
    </table>

    <h1 class="mt-5 mb-4">Drivers Pending Approval</h1>

    <table class="table table-striped table-hover">
        <thead class="table-warning">
            <tr>
                <th>#</th>
                <th>Full Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Vehicle</th>
                <th>Plate Number</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (PendingDrivers.Any())
            {
                int count = 1;
                foreach (var driver in PendingDrivers)
                {
                    <tr>
                        <td>@count</td>
                        <td>@driver.FullName</td>
                        <td>@driver.Email</td>
                        <td>@driver.PhoneNumber</td>
                        <td>@driver.VehicleModel (@driver.VehicleType)</td>
                        <td>@driver.PlateNumber</td>
                        <td>
                            <button class="btn btn-success btn-sm">Approve</button>
                            <button class="btn btn-danger btn-sm">Reject</button>
                        </td>
                    </tr>
                    count++;
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center">No drivers pending approval.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
