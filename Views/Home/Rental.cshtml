    <!-- JavaScript -->
    <script>
        const searchInput = document.getElementById("searchInput");
        const typeFilter = document.getElementById("typeFilter");

        const vehicleRows = {
            sedan: document.getElementById("sedanRow"),
            motorbike: document.getElementById("motorbikeRow"),
            van: document.getElementById("vanRow")
        };

        function filterVehicles() {
            const search = searchInput.value.toLowerCase();
            const type = typeFilter.value;

            Object.keys(vehicleRows).forEach(category => {
                const row = vehicleRows[category];
                const vehicles = row.querySelectorAll(".card");

                vehicles.forEach(vehicle => {
                    const tags = vehicle.getAttribute("data-tags") || '';
                    const vType = vehicle.getAttribute("data-type");

                    const matchesSearch = tags.includes(search);
                    const matchesType = type === "" || vType === type;

                    vehicle.style.display = matchesSearch && matchesType ? "block" : "none";
                });
            });
        }

        searchInput.addEventListener("input", filterVehicles);
        typeFilter.addEventListener("change", filterVehicles);
    </script>
