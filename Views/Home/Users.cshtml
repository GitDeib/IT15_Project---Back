                        </tr>
                        <!-- More rental owners here -->
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Passengers Tab -->
        <div class="tab-pane fade" id="passengers" role="tabpanel">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-warning">
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Registered On</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
